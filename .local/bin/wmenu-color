#!/bin/sh

col_bg=${WMENU_BG:-"000000"}
col_fg=${WMENU_FG:-"cdd6f4"}
col_prompt_bg=${WMENU_PROMPT_BG:-"b4befe"}
col_prompt_fg=${WMENU_PROMPT_FG:-"000000"}
col_sel_bg=${WMENU_SEL_BG:-"b4befe"}
col_sel_fg=${WMENU_SEL_FG:-"000000"}

cmd="wmenu"
if [ -n "$1" ] && [ "$1" = "wmenu-run" ]; then
	cmd="$1"
	shift
fi

$cmd \
	-N $col_bg        -n $col_fg        \
	-M $col_prompt_bg -m $col_prompt_fg \
	-S $col_sel_bg    -s $col_sel_fg    \
	$@
