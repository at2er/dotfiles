#!/bin/sh
## Thanks: unixchad
##   https://codeberg.org/unixchad/dotfiles/src/branch/master/.local/bin/scope
## License: See LISCENSE.unixchad-dotfiles

show_img() {
	if [ -n "$NVIM" ]; then
		catimg -t -w 80 "$1"
	else
		/usr/bin/chafa -f sixel -s "$2x$3" --animate off --polite on -t 1 --bg '#111111' "$1"
	fi
}

case "$(file -Lb --mime-type -- "$1")" in
	image/*)
		show_img "$1" "$2" "$3"
		;;
	audio/*)
		id3v2 -l "$1"
		;;
	application/x-iso)
		iso-info "$1" | "$PAGER"
		;;
	application/*tar|application/*zip*|application/zstd|application/*xz)
		tar vvtf "$1" | "$PAGER"
		;;
	*)
		cat "$1"
		;;
esac
